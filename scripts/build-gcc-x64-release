#!/bin/sh

SCRIPT_PATH=$(readlink -f "$0")
BASE_DIR=$(dirname "$(dirname "$SCRIPT_PATH)")")

# Create build directory.
if [ ! -d "$BUILD_DIR/build/gcc-x64-release" ]; then
    mkdir -p $BASE_DIR/build/gcc-x64-release
    if [ $? -eq 1 ]
    then
        echo "[!] ERROR: Failed to create build directory"
        exit 1
    fi
fi

cd $BASE_DIR/build/gcc-x64-release

# Run Conan.
echo "[*] Running Conan."
conan \
    install \
    ../.. \
    -s build_type=Release \
    -s compiler=gcc \
    -s compiler.libcxx=libstdc++11 \
    --build missing
if [ $? -eq 1 ]
then
    echo "[!] ERROR: Failed to generate project files - see above and correct."
    popd
    exit 2
fi

# Run CMake.
echo "[*] Generating project files."
cmake \
    -G"Unix Makefiles" \
    "-DCMAKE_BUILD_TYPE=Release" \
    "-Wno-dev" \
    ../..
if [ $? -eq 1 ]
then
    echo "[!] ERROR: Failed to generate project files - see above and correct."
    popd
    exit 2
fi

CPU_COUNT=`nproc --all`

# Run build
echo "[*] Building Release configuration on $CPU_COUNT cores."
make -j $CPU_COUNT &> build.log
if [ $? -eq 1 ]
then
    echo "[!] ERROR: Failed to build project - see above and correct."
    popd
    exit 3
fi
